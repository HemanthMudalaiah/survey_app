<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @survey.name %></dd>
</dl>


<ol>
  <% for question in @survey.questions %>
  <li><%= h question.content %></li>
  <ul>
    <% for option in question.options %>
      <li><%= h option.option %></li>
    <% end %>
  </ul>
  <% end %>
</ol>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_path(@survey), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_path(@survey),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<%= form_tag '/send_survey' do  %>
  <p>
    <h5>"Enter email Ids seperated by commas to mail survey"</h5><br/>
    <%= text_area_tag :email_id %>
    <%= hidden_field_tag :id, @survey.id %>
  </p>
  <%= submit_tag 'Send Survey' %>
<% end %>


<h3>Responses</h3>
<ol>
  <% for question in @survey.questions %>
    <li><%= h question.content %></li>
    <% for answer in question.answers %>
    <ul>
      <li><%= h answer.email %></li>
      <li><%= h answer.content %></li>
    </ul><br/>
    <% end %>
  <% end %>
</ol>

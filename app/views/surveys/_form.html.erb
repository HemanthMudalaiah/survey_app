<%= form_for @survey do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title_of_the_survey %><br />
    <%= f.text_field :name %>
  </p>
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
    <br/>
    <br/>
  <% end %>

  <p><%= link_to_add_fields "Add Question", f, :questions %></p>
  <br/>
  <p>
    <%= f.submit "Create Survey" %>
    <input type="button" value="Cancel" onclick="javascript:location.href='/surveys'" />
  </p>
<% end %>

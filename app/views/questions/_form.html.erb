<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :survey_id %>
    <%= f.input :qtype %>
    <%= f.input :mandatory %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
